@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
    {
    @Html.AntiForgeryToken()

   
        <li class="nav-item mx-0 mx-lg-1">
            @Html.ActionLink( User.Identity.GetUserName() + "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link py-3 px-0 px-lg-3 rounded" })
        </li class="nav-item>
        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
   
    }
}
else
{
    
        <li class="nav-item mx-0 mx-lg-1">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link py-3 px-0 px-lg-3 rounded" })</li class="nav-item>
        <li class="nav-item mx-0 mx-lg-1">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link py-3 px-0 px-lg-3 rounded" })</li>
   
}
